<view wx:if="{{isHide}}">
    <view wx:if="{{canIUse}}" >
        <view class='header'>
            <image src='../../index/image/wx_login.png'></image>
        </view>
 
        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>
 
        <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
            授权登录
        </button>
    </view>
    <view wx:else>请升级微信版本</view>
</view>
 
<view wx:else>
  <view class="userinfo">
    <view class="userinfo-avatar">
      <open-data  type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class='username'>
    <open-data type="userNickName"></open-data>
  </view>
  <van-cell-group>
    <van-cell
      title="用户积分"
      value="{{userIntegral}}"
      
      size=large
    />
    <van-cell
      title="用户类型"
      value="{{userType[0]}}"
      size=large
    />
    <van-cell
      bind:click="modifyPhone"
      clickable = true
      title="手机号码"
      value="{{userPhone}}"
      size=large
      is-link
      url="./userMsg/modifyPhone"
    />
    <van-cell
      title="我的订单"
      value="订单列表"
      size=large
      is-link
      url="./userOrders/userOrders"
    />
  </van-cell-group>
</view>


