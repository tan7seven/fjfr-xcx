<van-tabs type="card" color="rgba(4, 166, 241, 0.904)">
  <van-tab title="人找车" >
    <view class="card-view">
      <scroll-view>
        <view wx:for="{{ordersList}}" wx:for-index="index" wx:for-item="itemName" >
        <view class='card-font' bindtap="toOrdersMap" data-id="{{index}}" data-item="{{itemName}}" >
          <view>
          <image
            style="width: 15rpx; height: 15rpx;"
            mode="aspectFill"
            src="{{timeUrl}}"
          ></image>
          <text decode="nbsp">&nbsp;&nbsp;{{itemName.startTime}}</text>
          <image class='card-font-right'
            style="width: 30rpx; height: 30rpx;"
            mode="aspectFill"
            src="{{rightUrl}}"
          ></image>
          <text class='card-font-right' style='margin-top: -8rpx;'>{{itemName.ordersState}}</text>
          </view>
          <view>
          <image
            style="width: 15rpx; height: 15rpx;"
            mode="aspectFill"
            src="{{timeUrl}}"
          ></image>
          <text decode="nbsp">&nbsp;&nbsp;{{itemName.endTime}}</text>
          </view>
          <view>
          <image
            style="width: 15rpx; height: 15rpx;"
            mode="aspectFill"
            src="{{greenUrl}}"
          ></image>
          <text decode="nbsp">&nbsp;&nbsp;{{itemName.startAddress}}&nbsp;-&nbsp;{{itemName.startName}}</text>
          </view>
          <view>
          <image
            style="width: 15rpx; height: 15rpx;"
            mode="aspectFill"
            src="{{redRec}}"
          ></image>
          <text decode="nbsp">&nbsp;&nbsp;{{itemName.endAddress}}&nbsp;-&nbsp;{{itemName.endName}}</text>
          </view>
        </view>
        </view>
      </scroll-view> 
    </view>
  </van-tab>
  <van-tab title="车找人">内容 2</van-tab>
</van-tabs>